@using Microsoft.AspNetCore.Identity
@using Razor09.Models
@inject SignInManager<AppUser> SignInManager 
@inject UserManager<AppUser> UserManager


<ul class="navbar-nav">
    @if(SignInManager.IsSignedIn(User)){
        <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">Hi @UserManager.GetUserName(User)</a>
    </li>
     <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Logout">Đăng Xuất</a>
    </li>
    }
    else{
        <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Đăng Kí</a>
    </li>
     <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Đăng Nhập</a>
    </li>
    }
   
</ul>